<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/css/backstage/index.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/css/backstage/populars.css">
    <script src="/lib/jquery-3.4.1/jquery-3.4.1.min.js"></script>
    <link rel="stylesheet" href="/lib/layui-v2.5.5/css/layui.css" media="all">
    <link rel="stylesheet" href="/css/backstage/public.css" media="all">
    <style>
        .header {
            padding-left: 20px;
        }

        .head>div:nth-child(1) {
            width: 40%;
            float: left;
            border-right: 1px solid #0c0f13;
        }

        .head>div:nth-child(2) {
            width: 30%;
            float: left;
            border-right: 1px solid #0c0f13;
        }

        .head>div:nth-child(3) {
            width: 30%;
            float: left;
            border-right: 1px solid #0c0f13;
        }

        div.topic>div:nth-child(1) {
            width: 40%;
            float: left;
            border-right: 1px solid #0c0f13;
        }

        div.topic>div:nth-child(2) {
            width: 30%;
            float: left;
            border-right: 1px solid #0c0f13;
        }

        div.topic>div:nth-child(3) {
            width: 30%;
            float: left;
            border-right: 1px solid #0c0f13;
        }

        .header .addTop {
            display: block;
            width: 100px;
            height: 40px;
        }

        .addbtn:hover {
            background: #28333e;
            color: white;
        }

        .addbtn {
            width: 100px;
            height: 30px;
            line-height: 30px;
            border: 1px solid #0c0f13;
            border-radius: 5px;
        }

        .header button {
            margin-left: 20px;
        }
    </style>
</head>

<body>

    <div class="layuimini-notice header">
        <div class="layuimini-notice-title"><button type="button" class="addbtn">添加标签</button></div>
        <div class="layuimini-notice-extra"></div>
        <div class="layuimini-notice-content layui-hide">
            <input type="text" class="addTop">
        </div>
    </div>
    <div id="content" style="background: #fff;" class="content">
        <div class="head">
            <div>标签名</div>
            <div>状态</div>
            <div>操作</div>
        </div>
        {{each labellist as topic}}
        <div class="topic">
            <div>
                <a href="">{{topic.labelName}}</a>
            </div>
            <div>
                <% if (topic.labelStatus == 0) { %>
                正常
                <% } else if (topic.labelStatus == 1) { %>
                已禁用
                <% } %>
            </div>
            <div>
                <% if (topic.labelStatus == 0) { %>
                <a href="/backstage/deleteLabelById/{{topic._id}}/1?pageNumL={{pageNumL}}&pageSize=10">禁用</a>
                <% } else if (topic.labelStatus == 1) { %>
                <a href="/backstage/deleteLabelById/{{topic._id}}/0?pageNumL={{pageNumL}}&pageSize=10">解禁</a>
                <% } %>
            </div>
        </div>
        {{/each}}
    </div>

    <div id="pager" class="pagerController">
        <span>当前页: {{pageNumL}} / {{pageCountL}}</span>
        <!-- 首页 -->
        <a href="/backstage/queryAllLabel?pageNumL=1&pageSize=10">首页</a>

        <!-- 上一页: 已经处于第一页,那么就不显示上一页 -->
        {{if (pageNumL != 1)}}
        <a href="/backstage/queryAllLabel?pageNumL={{pageNumL-1}}&pageSize=10">上一页</a>
        {{/if}}

        <!-- 显示数值码 -->
        <!-- 如果总页码小于等于5 -->
        {{if (pageCountL <= 5)}}
        <% for(var i = 1; i <= pageCountL; i++){ %>
        <% if (i == pageNumL) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10" class="active"><%= i %></a>
        <% } else if (pageNumL != i) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10"><%= i %></a>
        <% } %>
        <% } %>
        {{/if}}

        {{if (pageNumL <= 3 && pageCountL > 5) }}
        <% for(var i = 1; i <= 5; i++){ %>
        <% if (i == pageNumL) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10" class="active"><%= i %></a>
        <% } else if (pageNumL != i) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10"><%= i %></a>
        <% } %>
        <% } %>
        {{/if}}

        {{if (pageNumL > 3 && (pageNumL+2 <= pageCountL)) }}
        <% for(var i = pageNumL -2; i <= pageNumL + 2; i++){ %>
        <% if (i == pageNumL) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10" class="active"><%= i %></a>
        <% } else if (pageNumL != i) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10"><%= i %></a>
        <% } %>
        <% } %>
        {{/if}}

        {{if (pageNumL + 2 > pageCountL && pageCountL > 5)}}
        <% for(var i = pageCountL - 4; i <= pageCountL; i++){ %>
        <% if (i == pageNumL) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10" class="active"><%= i %></a>
        <% } else if (pageNumL != i) { %>
        <a href="/backstage/queryAllLabel?pageNumL=<%= i %>&pageSize=10"><%= i %></a>
        <% } %>
        <% } %>
        {{/if}}

        <!-- 下一页：已经处于最后一页,那么就不显示下一页 -->
        {{if (pageNumL != pageCountL)}}
        <a href="/backstage/queryAllLabel?pageNumL={{pageNumL+1}}&pageSize=10">下一页</a>
        {{/if}}

        <!-- 尾页 -->
        <a href="/backstage/queryAllLabel?pageNumL={{pageCountL}}&pageSize=10">尾页</a>
    </div>
    <script src="../lib/layui-v2.5.5/layui.js" charset="utf-8"></script>
    <script src="../js/lay-config.js?v=1.0.4" charset="utf-8"></script>
    <script>
        // 如果当前页面没有数据，则给.active类元素加当前href
        $(function () {
            console.log($("#content .topic").length);
            if ($("#content .topic").length == 0) {
                location.href = $(".active").attr("href")
            }
        })
        layui.use(['layer', 'miniTab', 'echarts'], function () {
            var $ = layui.jquery,
                layer = layui.layer,
                miniTab = layui.miniTab,
                echarts = layui.echarts;

            miniTab.listen();

            /**
             * 添加标题
             **/
            $('body').on('click', '.layuimini-notice-title', function () {
                layer.prompt({
                    title: '输入标签名，并确认',
                    formType: 2
                }, function (pass, index) {
                    layer.close(index);
                    // layer.prompt({
                    //     title: '随便写点啥，并确认',
                    //     formType: 2
                    // }, function (text, index) {
                    //     layer.close(index);
                    //     
                    // });
                    $.ajax({
                        url: "/backstage/addLabel",
                        method: "post",
                        data: {
                            labelName: pass,
                            labelStatus: 0
                        },
                        success: function (data) {
                            layer.msg('添加' + pass + '成功！');
                            location.href =
                                '/backstage/queryAllLabel?pageSize=10&pageNumL=1';
                        },
                        error: function (data) {
                            layer.msg('添加' + pass + '失败！');
                        }
                    });
                });

            });

        });
    </script>
</body>

</html>